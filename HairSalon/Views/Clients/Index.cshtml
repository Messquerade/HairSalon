@{
  Layout = "_Layout";
}

@using HairSalon.Models
@model List<HairSalon.Models.Client>

<h1>Clients</h1>

<ul>
  @foreach(Client client in Model)
  {
    <li>@Html.ActionLink($"{client.Name}", "Details", new {id = client.ClientId}) | Current Stylist: @Html.ActionLink($"{client.Stylist.Name}", "Details", "Stylists", new {id = client.StylistId})</li>
  }
</ul>

<p>@Html.ActionLink("Add a Client", "Create")</p>
<p>@Html.ActionLink("See all Stylists", "Index", "Stylists")</p>
<p>@Html.ActionLink("Back to Home", "Index", "Home")</p>

